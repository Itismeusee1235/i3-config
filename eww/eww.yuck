(defwindow powermenu
  :stacktype "fg"
  :windowtype "normal"
  :wm-ignore true
  :geometry (geometry :width "100%" :height "100%")
  (powermenu_layout)
)
(defpoll time 
  :interval "5s"
  :initial `date + '{"hour":"%H", "min":"%M}'`
  `date + '{"hour":"%H", "min":"%M}'`
)
(defpoll net
  :interval "100s"
  :initial `N/A`
  `nmcli -t -f SIGNAL,ACTIVE device wifi \
    | awk -F':' '{if($2=="yes")print$1}'`
)
